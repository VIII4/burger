<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat - Da - Burger</h1>
        <p class="lead">create a burger or devour one.</p>
        <form class="form-inline">
            <div class="form-group mb-2">
                <label for="staticInstruction" class="sr-only">Instructions</label>
                <input type="text" readonly class="form-control-plaintext" id="staticInstructions"
                    value="Add a burger here!">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="burgername" class="sr-only">Burger</label>
                <input type="text" class="form-control" id="burger-name" placeholder="Big Burger">
            </div>
            <button type="submit" class="btn btn-primary mb-2" id="add-burger">Add</button>
        </form>
    </div>
</div>
<div class="container">
    <div class="row row-cols-md-2 row-cols-1 p-2 mx-auto">

        <div id="not-devoured-burgers" class="col">
            <h3>Burgers</h3>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/burger-block }}
                {{/unless}}
                {{/each}}

            </ul>
        </div>
        <div id="devoured-burgers" class="col">
            <h3>Devoured Burgers</h3>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>